# Railway Environment Variables
# Copy this to .env and fill in your values

# Server Configuration
PORT=3001
HOST=0.0.0.0
CORS_ORIGINS=https://your-frontend-domain.railway.app,http://localhost:3000,http://localhost:5173
MAX_FILE_SIZE=20971520
REQUEST_TIMEOUT=30000

# Database Configuration (Railway will provide this)
DATABASE_URL=postgresql://user:password@host:port/database

# Parser Configuration
ENABLE_OCR=true
ENABLE_PYTHON_PARSERS=false
LOG_LEVEL=info
MIN_TEXT_LENGTH=50
MAX_RETRIES=3
RETRY_DELAY=1000
CONFIDENCE_THRESHOLD=0.7
TEXT_LENGTH_THRESHOLD=500

# OCR Configuration
OCR_LANGUAGE=eng
OCR_VERBOSE=false
OCR_CHAR_WHITELIST=
OCR_PAGE_SEG_MODE=1

# Logging Configuration
LOG_FILE=./logs/cv-parser.log
LOG_MAX_FILE_SIZE=10485760
LOG_MAX_FILES=5
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true

# Performance Configuration
ENABLE_METRICS=true
METRICS_INTERVAL=60000
ENABLE_CIRCUIT_BREAKER=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# File Processing Configuration
TEMP_DIR=./temp
CLEANUP_INTERVAL=300000

# Security Configuration
ENABLE_RATE_LIMIT=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
ENABLE_CORS=true
TRUSTED_PROXIES=

# Feature Flags
ENABLE_BENCHMARKING=true
ENABLE_HEALTH_CHECKS=true

# JWT Secret (Railway will generate this)
JWT_SECRET=your-jwt-secret-here
