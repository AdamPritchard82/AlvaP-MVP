{
  "$schema": "https://railway.app/railway.schema.json",
  "services": {
    "backend": {
      "rootDirectory": ".",
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install"
      },
      "deploy": {
        "startCommand": "node src/simple-candidate-server.js",
        "healthcheckPath": "/health",
        "healthcheckTimeout": 150,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
      },
      "variables": {
        "ENABLE_DOTNET_PARSER": "true",
        "DOTNET_CV_API_URL": "https://alvap-mvp-production.up.railway.app"
      }
    },
    "frontend": {
      "rootDirectory": "frontend",
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install && rm -rf dist && npm run build"
      },
      "deploy": {
        "startCommand": "npx serve -s dist -l 8080",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
      }
    }
  }
}
