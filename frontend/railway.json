{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "buildCommand": "cd .. && npm install && cd frontend && npm run build"
  },
  "deploy": {
    "startCommand": "node ../simple-working-server.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
